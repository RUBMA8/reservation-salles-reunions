<header class="header">
  <nav class="navbar">
    <div class="nav-brand">
      <a href="/">{{appName}}</a>
    </div>

    <ul class="nav-menu">
      {{#if isAuthenticated}}
      <li><a href="/dashboard">Tableau de bord</a></li>
      <li><a href="/salles">Salles</a></li>
      <li><a href="/mes-reservations">Mes réservations</a></li>

      {{#ifEquals user.role 'admin'}}
      <li><a href="/admin/dashboard" class="admin-link">Administration</a></li>
      {{/ifEquals}}

      <li><a href="/auth/logout" class="btn-logout">Déconnexion</a></li>
      <li class="user-info">{{user.prenom}} {{user.nom}}</li>
      {{else}}
      <li class="nav-item me-2">
        <a href="/auth/login" class="btn btn-primary text-white px-4 py-2 rounded-3">
          Connexion
        </a>
      </li>

      <li class="nav-item">
        <a href="/auth/register" class="btn btn-success text-white px-4 py-2 rounded-3">
          Inscription
        </a>
      </li>

      {{/if}}
    </ul>
  </nav>
</header>
